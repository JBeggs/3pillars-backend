# Django CRM Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# Django Settings
SECRET_KEY=your-secret-key-here-generate-with-python-manage.py-shell
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.1.101

# Database (for local development - SQLite is default)
# DATABASE_URL is automatically set by Railway in production
# For local PostgreSQL/MySQL, uncomment and set:
# DATABASE_URL=postgresql://user:password@localhost:5432/crm_db
# DATABASE_URL=mysql://user:password@localhost:3306/crm_db

# CORS Settings (for Flutter app)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Settings (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_PORT=587
EMAIL_USE_TLS=True

# CRM Settings
SECRET_CRM_PREFIX=123/
SECRET_ADMIN_PREFIX=456-admin/
SECRET_LOGIN_PREFIX=789-login/

# AWS S3 (optional - for media files in production)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=us-east-1
